<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Global turbo filter to sanitize CR/LF and control chars (CWE-117) -->
    <turboFilter class="org.tmf676.security.logging.SafeLoggingTurboFilter" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Replace CR/LF in the rendered message as a second line of defense -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %replace(%msg){'[
	]',' '}%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
